<%- include('ar_parts/ar_header')%>
<%- include('ar_parts/ar_navbar')%>

<div class="container text-center">
    <h4 style="color: goldenrod;">أنشئ حساباً</h4>
    <form action="/ar_signup" method="POST">
        <input type="text" class="form-control" name="username" placeholder="الاسم">
        <% let usernameError = validationErrors.find(err => err.param === 'username') %>
        <% if (usernameError) { %>
            <p class="alert alert-danger"><%= usernameError.msg %></p>
        <% } %>

        <input type="number" class="form-control" name="phonenumber" placeholder="رقم الموبايل">
        <% let phonenumberError = validationErrors.find(err => err.param === 'phonenumber') %>
        <% if (phonenumberError) { %>
            <p class="alert alert-danger"><%= phonenumberError.msg %></p>
        <% } %>

        <input type="text" class="form-control" name="address" placeholder="العنوان">
        <% let addressError = validationErrors.find(err => err.param === 'address') %>
        <% if (addressError) { %>
            <p class="alert alert-danger"><%= addressError.msg %></p>
        <% } %>

        <input type="email" class="form-control" name="email" placeholder="البريد الالكتروني">
        <% let emailError = validationErrors.find(err => err.param === 'email') %>
        <% if (emailError) { %>
            <p class="alert alert-danger"><%= emailError.msg %></p>
        <% } %>

        <input type="password" class="form-control" name="password" placeholder="كلمة السر">
        <% let passwordError = validationErrors.find(err => err.param === 'password') %>
        <% if (passwordError) { %>
            <p class="alert alert-danger"><%= passwordError.msg %></p>
        <% } %>

        <input type="password" class="form-control" name="confirmPassword" placeholder="تاكيد كلمة السر">
        <% let passwordConfirmError = validationErrors.find(err => err.param === 'passwordConfirm') %>
        <% if (passwordConfirmError) { %>
            <p class="alert alert-danger"><%= passwordConfirmError.msg %></p>
        <% } %>
        
        <input type="submit" value="إبدء الأن" class="btn btn-outline-primary">
    </form>
    <% if(authError) { %>
        <br>
        <p class="alert alert-danger"><%= authError%></p>
    <% } %>
    <br>
    <div>مسجل بالفعل؟ <a href="/ar_login">دخول</a></div>
</div>

<%- include('ar_parts/ar_footer')%>